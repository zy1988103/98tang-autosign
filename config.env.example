# ================================================
# 98tang-autosign - 配置文件模板
# ================================================
# 使用说明：
# 1. 复制此文件为 config.env: cp config.env.example config.env
# 2. 填写下方的必需配置项
# 3. 根据需要启用可选功能
# ================================================

# ================================================
# 基本配置（必填）
# ================================================

# 98tang账号信息
SITE_USERNAME=your_username
SITE_PASSWORD=your_password

# 网站地址（通常不需要修改）
BASE_URL=https://www.sehuatang.org

# ================================================
# 核心功能开关
# ================================================

# 是否启用签到功能
ENABLE_CHECKIN=true

# 是否启用安全提问处理（如果你的账号设置了安全提问，请设为true）
ENABLE_SECURITY_QUESTION=false

# 注意：只有上面安全提问处理未true时才需要填写
# 你在网站设置的安全提问内容
SECURITY_QUESTION=您个人计算机的型号
# 安全提问的答案
SECURITY_ANSWER=your_answer

# ================================================
# Telegram通知
# ================================================

# 是否启用Telegram通知
ENABLE_TELEGRAM_NOTIFICATION=false

# Telegram机器人Token
TELEGRAM_BOT_TOKEN=

# Telegram聊天ID（你的用户ID）
TELEGRAM_CHAT_ID=

# 是否发送详细日志文件（可选）
TELEGRAM_SEND_LOG_FILE=true

# Telegram代理URL（国内用户可能需要，可选）
TELEGRAM_PROXY_URL=

# ================================================
# 拟人化行为
# ================================================

# 是否启用随机回复功能
ENABLE_REPLY=true

# 回复数量（建议1-3个）
REPLY_COUNT=2

# 是否启用随机浏览
ENABLE_RANDOM_BROWSING=true

# 随机浏览页面数量（建议2-5页）
BROWSE_PAGE_COUNT=3

# 回复消息模板（用分号;分隔多个消息）
REPLY_MESSAGES=感谢分享资源，收藏了;好资源收藏了，谢谢楼主;感谢楼主的精彩分享;谢谢分享，非常实用;好内容，支持一下楼主;感谢分享好资源，顶一个;收藏支持，谢谢楼主分享;好资源必须收藏，感谢分享;谢谢楼主分享这么好的内容;感谢分享，内容很棒

# ================================================
# 浏览器设置
# ================================================

# 是否无头模式运行（true=不显示浏览器窗口）
# 调试时建议设为false，正式运行建议设为true
HEADLESS=true

# ================================================
# 日志配置
# ================================================

# 日志级别（DEBUG显示详细信息，INFO显示基本信息）
LOG_LEVEL=debug

# 日志保存目录
LOG_DIR=logs

# 最大保留日志文件数量
MAX_LOG_FILES=7

# ================================================
# 高级配置
# ================================================

# 操作延迟倍数（0.5-3.0，数值越大操作越慢越像人类）
TIMING_MULTIPLIER=1.0

# 是否启用智能延迟（根据页面复杂度自动调整延迟）
ENABLE_SMART_TIMING=true

# 登录后等待时间（秒）
WAIT_AFTER_LOGIN=5

# 评论间隔时间（秒，不低于15秒）
COMMENT_INTERVAL=15

# 最大重试次数
MAX_RETRIES=3

# 程序运行超时时间（分钟）
TIMEOUT_MINUTES=5
